<%= render "layouts/loginheader"%>
<h2 class="d-flex justify-content-center">Edit Comment</h2>

<div class="container">
  <%= form_with model: [ @videoalbum, @comment ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter, class: "form-control" %>
  </p>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :body, class: "form-control" %>
  </p>
  <p>
    <%= form.submit "Submit" %>
  </p>
  <% end %>
</div>