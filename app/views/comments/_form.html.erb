<%= form_with model: [ @videoalbum, @comment ] do |form| %>

<%= form.hidden_field :commenter, value: current_user.user_name, class: "form-control" %><br>

<div class="d-flex">
  <%= form.label :comment, class: "mt-2"%>
  <%= form.text_area :body, class: "form-control mx-4 border-0 border-bottom", placeholder: "Add a comment..." %>
</div>
<br>
<p class="float-end mx-5 fa fa-send">
  <%= form.submit "submit", class:" text-success border-0  bg-transparent"%>
</p>
<% end %>